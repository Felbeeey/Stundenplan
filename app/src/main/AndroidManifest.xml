<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ebner.stundenplan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_stundenplan2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_stundenplan2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.manage.FragmentTeacher"
            android:launchMode="singleTop" />
        <activity
            android:name=".fragments.manage.FragmentRoom"
            android:launchMode="singleTop" />
        <activity android:name=".fragments.manage.ActivityAddEditRoom" />
        <activity android:name=".fragments.manage.ActivityAddEditTeacher" />
        <activity android:name=".fragments.manage.ActivityAddEditSubject" />
        <activity android:name=".fragments.manage.ActivityAddEditYear" />
        <activity android:name=".fragments.manage.ActivityAddEditExamtype" />
        <activity android:name=".fragments.manage.ActivityAddEditSchoolLesson" />
        <activity android:name=".fragments.main.ActivityAddEditExam" />
        <activity android:name=".fragments.manage.ActivityAddEditLesson" />
        <activity android:name=".SubjectExamsActivity" />
        <activity
            android:name=".fragments.settings.SettingsActivity"
            android:label="SettingsActivity" />
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>