<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/cv_exam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_exam_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Exam_Grade"
            android:gravity="center"
            android:layout_weight="15"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />


        <LinearLayout
            android:id="@+id/ll_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="85">

            <TextView
                android:id="@+id/tv_exam_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Exam_Subject_Name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <TextView
                android:id="@+id/tv_exam_examtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Examtype"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />


            <TextView
                android:id="@+id/tv_exam_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam_Date" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
